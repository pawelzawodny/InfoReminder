<!DOCTYPE html>
<html>
  <head>
    <title>InfoReminder</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="loading_bar">Please wait, page is loaded</div>
    <div class="container">
      <div class="span-24">
        <div id="header">
          <%= link_to 'infoReminder', root_url, :id=>'title_logo' %>
          <div id="top_menu">
            <div id="user_menu">
              <%= link_to 'Find groups', search_groups_path %>
              <% if user_signed_in? %>
              <%= render partial: 'users/signed_in_menu' %>

              <% else %>
              <%= render partial: 'users/signed_out_menu' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div id="content">
        <%= yield %>
      </div>
      <div class="span-24">
        <div id="footer_bar">
          Copyright 2012 infoReminder Apps Inc.
        </div>
      </div>
  </body>
</html>
