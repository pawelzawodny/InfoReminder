<div id="browse_ui">
  <%= form_tag browse_events_path, :id => 'browse_events_form' do %>
    <div class="field">
      <%= label_tag "Group" %>
      <%= group_picker current_user.readable_groups, params[:group_id] %>
    </div>
    <div class="field">
      <%= date_picker("date_start", @period[:start_date]) %>
    </div>
    <div class="field">
      <%= date_picker("date_end", @period[:end_date]) %>
    </div>
    <div class="actions">
      <%= submit_tag "Filter" %>
    </div>
  <% end %>
</div>
