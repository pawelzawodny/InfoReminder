<div class="span-24 ">
  <div id="logged_middle">
    <div id="logged_middle_inner">
      <h1><%=t :listing_events %></h1>
      <table>
        <tr>
          <th><%=t :title %></th>
          <th><%=t :description %></th>
          <th><%=t :date %></th>
          <th><%=t :group %></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= event.group %></td>
          <td><%= link_to t(:show), group_event_path(event.group_id, event.id) %></td>
          <td><%= link_to t(:edit), edit_group_event_path(event.group.id, event.id) %></td>
          <td><%= link_to t(:destroy), group_event_path(event.group_id, event.id), confirm: 'Are you sure?', method: :delete %></td>
        </tr>
        <% end %>
      </table>
      <br />
    </div>
  </div>
</div>
